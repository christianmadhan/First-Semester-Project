<Page
    x:Class="MovieApp.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MovieApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/PageStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#d8d8d8">

        

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="350"/>
            <RowDefinition Height="190"/>
            <RowDefinition Height="200" />

        </Grid.RowDefinitions>

        <Border BorderThickness="0,0,0,11" BorderBrush="#773438">
            <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#353535">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Home" Margin="10,16,10,0" Foreground="White" Background="#353535"   Click="GoToHome"/>
                    <Button Content="Browse" Margin="10,16,10,0" Foreground="White" Background="#353535" Click="GoToBrowse"/>
                    <Button Content="About" Margin="10,16,10,0" Foreground="White" Background="#353535"  Click="GoToAbout"/>
                    <Button Content="Admin" Margin="10,16,10,0" Foreground="White" Background="#353535" Click="GoToAdminPage"  />
                </StackPanel>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="1">
            <TextBlock TextWrapping="Wrap" Height="434" Margin="20,200,536,0" FontFamily="Tahoma" >
                Ruby is a theatre company developed in Copenhagen.The company was officialy founded by two brothers John and Jake Cook in 1990. 
                Being first based in the city of Roskilde, as years past by the company started to spread its business all over Denmark and after 1993 they established theatres in Germany,UK,France,Italy and whole region of Scandinavia.It has grown rapidly to achieve a revenue of 11.9 million in 1995 after premier of first animated movie in history of cinematography "Toy story".The company employs 872 staff in all theathers.

            </TextBlock>
        </StackPanel>


        <!--promo code text -->
