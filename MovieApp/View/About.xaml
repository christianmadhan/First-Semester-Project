        </StackPanel>
        <Image HorizontalAlignment="Left" Source="ms-appx:///Assets/sfi-hq.jpg" Height="338" Margin="761,60,0,-387" Grid.RowSpan="3" Grid.Row="1" VerticalAlignment="Top" Width="508"/>

        <Image HorizontalAlignment="Left" Height="176" Source="ms-appx:///Assets/logoTransparent.png" Margin="269,83,0,-259" Grid.RowSpan="4" VerticalAlignment="Top" Width="204"/>

    <!--promo code text -->
